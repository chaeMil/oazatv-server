                                                        <li><a onclick="convertVideoFileDialog({$video->id|noescape}, 'mp4_file', '{$mp3File|noescape}')">MP3 soubor</a></li>
                                                    {/if}
                                                    {if (!$video->webm_file)}
                                                        <li><a onclick="convertVideoFileDialog({$video->id|noescape}, 'mp4_file', '{$webmFile|noescape}')">WEBM soubor</a></li>
