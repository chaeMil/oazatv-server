{block content}

<div id="wrapper">
    
    {include ../navbar.latte}
    
    <div class="container-fluid">
        <div class="row">
            <h2>
                <a href="javascript:history.go(-1);">
                    <span class="glyphicon glyphicon-chevron-left pull-left"></span>
                </a>
