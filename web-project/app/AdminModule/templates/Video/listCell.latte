    <div class="hidden-xs" style="min-width: 150px">
        <a target="_blank"
            href="{plink Video:Detail $row['id']}"
            class="btn btn-default">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </a>
        <a target="_blank"
            href="{plink :Front:Video:Watch $row['hash']}"
            class="btn btn-default">
            <i class="fa fa-globe"></i>
        </a>
        {*<div class="dropdown clickable-row-disable">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdown_{$row['id']}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
