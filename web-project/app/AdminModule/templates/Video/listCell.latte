    </div>
{/define}

{define col-name_cs}
    <td>
        <a href="{plink Video:detail $row['id']}">{$cell}</a>
    </td>
{/define}

{define col-name_en}
    <td>
        <a href="{plink Video:detail $row['id']}">{$cell}</a>
    </td>
{/define}

{define col-thumb_file}
    <td>
        <a href="{plink Video:detail $row['id']}">
            <img style="max-width: 180px"
                class="img-responsive"
                src="{$basePath}/db/videos/{$row['id']}/{$row['thumb_file']}" />
        </a>
    </td>
{/define}

{define col-published}
    <td>
        {if $cell == 1}
            <i class="fa fa-check" aria-hidden="true" style="color: green; font-size: 24px;"></i>
        {else}
            <i class="fa fa-times" aria-hidden="true" style="color: red; font-size: 24px;"></i>
        {/if}
    </td>
{/define}

{define col-thumb_color}
    <td>
        {if $row['thumb_color'] != NULL}
            <div style="width: 80px; height: 80px; border: 1px solid black;
                    background-color: {$row['thumb_color']|noescape};
                    text-align: center; line-height: 80px">
                <span style="color: white; background-color: black; padding: 4px">
                    {$row['thumb_color']|noescape}
                </span>
            </div>
        {else}
            <div style="border: 1px solid black; width: 50px; height: 50px; text-align: center; line-height: 50px">
                <a href="{plink Video:detail, $row['id']}#files">NULL</a>
            </div>
        {/if}
    </td>
{/define}

{define col-date}
    <td>
        <span>{$cell|date:'j.n.Y'}</span>
    </td>
{/define}