<div class="archive-sidemenu" id="archive-menu-affix">
    <ul id="archive-menu" class="list-group">
        {foreach $archiveMenu as $menu}
            <li class="list-group-item {if isset($activeMenu) && $activeMenu['id'] == $menu['id']}active{/if}">
                <a n:href="Archive:Menu $menu['tags']">
                    {$menu['name']}
                </a>
                <span class="badge">
                    {$archiveMenuManager->countItemsInMenuByTag($menu['tags'])}
                </span>
            </li>
        {/foreach}
    </ul>
</div>