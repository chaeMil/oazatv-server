<div class="archive-sidemenu" id="archive-menu-affix">
    <ul id="archive-menu" class="list-group">
        <li class="list-group-item {if isset($activeMenu) && $activeMenu['id'] == 'albums'}active{/if}">
            <a n:href="Archive:albums">
                {_frontend.basic.photo_albums}
            </a>
            <span class="badge">
                {$albumsCount}
            </span>
        </li>
        <li class="list-group-item {if isset($activeMenu) && $activeMenu['id'] == 'videosWithSubtitles'}active{/if}">
            <a n:href="Archive:videosWithSubtitles">
                {_frontend.basic.videos_with_subtitles}
            </a>
            <span class="badge">
                {$videosWithSubtitlesCount}
            </span>
        </li>
        <li class="list-group-item {if isset($activeMenu) && $activeMenu['id'] == 'english'}active{/if}">
            <a n:href="Archive:english">
                English
            </a>
            <span class="badge">
                {$englishVideosCount}
            </span>
        </li>
        <li class="list-group-item {if isset($activeMenu) && $activeMenu['id'] == 'russian'}active{/if}">
            <a n:href="Archive:russian">
                pусский
            </a>
            <span class="badge">
                {$russianVideosCount}
            </span>
        </li>
        {foreach $archiveMenu as $menu}
            <li class="list-group-item {if isset($activeMenu) && $activeMenu['id'] == $menu['id']}active{/if}">
                <a n:href="Archive:Menu $menu['tags']">
                    {$menu['name']}
                </a>
                <span class="badge">
                    {$archiveMenuManager->countItemsInMenuByTag($menu['tags'])}
                </span>
            </li>
        {/foreach}
    </ul>
</div>