{block content}

<div class="col-xs-12">
    {if isset($popularVideos)}
        <div class="row videos-box">
            {foreach $popularVideos as $item}
                {breakIf $iterator->getCounter() > $data['inputs']['max_videos']}
                {include '../../Shared/videoBox.latte', item => $item}
            {/foreach}
        </div>
    {/if}
</div>